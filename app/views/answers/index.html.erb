<div class="mb-5">
	<h1 class="text-center"><%= @lesson.category.title %></h1>

	<h3 class="text-right">Result: <%= @lesson.choices.pluck("correct").count(true) %>/<%= @lesson.choices.pluck("content").count %></h3>
</div>

<div class="row">
		<table class="table table-hover">
        <thead>
	    	<tr>
	            <th scope="col">#</th>
	            <th scope="col">word</th>
	            <th scope="col">answer</th>
	        </tr>
	    </thead>
	    <tbody>
			<% @answers.each do |answer| %>
		        <tr>
		          	<td>
		          		<% if answer.choice.correct %>
		          			<%= fa_icon("grin-beam 2x", text: "OK", class: "fa-green") %>
		          		<% else %>
		          			<%= fa_icon("dizzy 2x", text: "NG", class: "fa-red") %>
		          		<% end %>	
		          	</td>
		            <td>
		            	<%= answer.word.content %>
		            </td>
		            <td><%= answer.choice.content %></td>
		            
		        </tr>
			<% end %>		
	    </tbody> 
	    
        </table>

</div>