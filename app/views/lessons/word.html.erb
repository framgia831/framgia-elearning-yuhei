<!-- dashbord.html.erb -->

<div class="container justify-content-around">
    <div class="row"> 
        <div class="col-9">
            <h3>words</h3>
              <table class="table">
                <thead>
                  <tr>
                    <th>Word</th>
                    <th>Your answer</th>
                    <th>Correct answer</th>
                  </tr>
                </thead>
                <tbody>
                  <% @choices.each do |choice| %>
                  <tr>
                    <th><%= choice.word.content %></th>
                    <th><%= choice.content %></th>
                    <th><%= choice.content if choice.correct == true %></th>
                  </tr>
                 <% end %> 
                </tbody>
              </table>
              
        </div>
   
    
        <div class="col-3 py-2 px-3 ">
            <div class="card">
                <div class="row card-body">
                    <div class="img col-md-6">
                        <%= user_image(current_user) %>
                    </div> 
                    <div class="col-md-6">
                        <h3><%= current_user.name %></h3>
                    
                    </div>
                </div>
            </div>  
            <div class="card mt-3">
                <div class="card-body text-center">
                    <h7>Learned <%= current_user.words.size %> words 
                        <br> 
                        Learned <%= current_user.lessons.size %> lessons
                    </h7>
                </div>
            </div>
            
        </div>
        
    </div>
</div>


