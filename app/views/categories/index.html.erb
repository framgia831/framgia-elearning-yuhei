<!-- index.html.erb -->
<div class="mb-5">
	<h1 class="text-center">Categories</h1>
</div>

<div class="row">
		<table class="table table-hover">
        <thead>
	    	<tr>
	            <th scope="col">#</th>
	            <th scope="col">title</th>
	            <th scope="col">description</th>
	        </tr>
	    </thead>
	<% @categories_all.each_with_index do |category, i| %>
	    <tbody>
	        <tr>
	            <th scope="row"><%= i+1 %></th>
	            <td>
	            	<%= category.title %>
	            </td>
	            <td><%= category.description %></td>
	            <td>
	            	<% if  @categories.include?(category) %>
	            	<%= button_to "start", lessons_path, params: {category_id: category.id}, class: 'btn btn btn-block mb-3' %>
	            	<% else %>
	            	<%= link_to "result", category_path(category), class: 'btn btn btn-block mb-3' %>
	            	<% end %>
	            </td>
	        </tr>
	    </tbody> 
	    
	<% end %>		
        </table>

</div>