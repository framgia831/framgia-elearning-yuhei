<!-- show.html.erb -->
<div class="container justify-content-around">
  <div class="row  py-4">
    <div class="border border-info col-3 py-2 px-3 rounded">
      <div class="row mb-3">
        <div class="img col-md-6 ">
          <%= image_tag(@user.image.url) if @user.image? %>
        </div> 
        <div class="col-md-6">
          <h1><%= @user.name %></h1>
          <hr>
          <h7><%= @user.followers.count %> followers</h7>
          <br>
          <h7><%= @user.following.count %> following</h7>
        </div>  
      </div>
      
      <div class="button">
        <% if current_user != @user %>
          <% if relationship = current_user.relationship(@user)%>
            <%= button_to "Unfollow", relationship_path(relationship), method: :delete, class: 'btn btn-default btn-block' %>
          <% else %>
            <%= button_to "Follow", relationships_path, params: {followed_id: @user.id}, class: 'btn btn-success btn-block' %>
          <% end %>
          <% else %>  
          <%= link_to "Edit", edit_user_path, type: "button", class: "btn btn-default btn-block" %>
        <% end %> 
      </div>  

    </div>

    <div class="col-9 ">
    	<h3>activities</h3>
        <% @user.lessons.each do |lesson| %>
          <div class="media border-top p-2">
            <div class="media-body row">
              <div class="img col-md-2">
                <%= image_tag(@user.image.url) if @user.image? %>
              </div>
              <div class="content col-md-10"> 
                <h5><%= link_to lesson.user.name, user_path(lesson.user) %> leaned <%= lesson.choices.pluck("correct").count(true) %> of <%= lesson.choices.pluck("content").count %> in <%= link_to lesson.category.title, category_path(lesson.category) %>
                </h5>
              </div>
            </div>
          </div>
      <% end %> 
    </div>
   
  </div>

</div>

