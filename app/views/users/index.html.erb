<!-- index.html.erb -->
<div class="container">
	<h1 class="text-center ">Users</h1>
	<% unless @users.empty? %>
		<div class="row">
		<% @users.each do |user| %>
			<div class="card col-sm-6 my-4">
				<div class="card-body row">
					<div class="col-4">
						<%= user_image(user, class: "a-img") %> 
					</div>
					<div class="col-8">
						<h3><%= link_to user.name, user_path(user) %></h3>
					</div>
				</div>
			</div>
		<% end %>	
		</div>

        <% else %>
            <div class="text-center mt-5 alert alert-info">
                <h3>Nothing to show</h3> 
            </div>
    <% end %>

	<div class="paginate text-center">
		<%= paginate @users %>
	</div>
</div>

