<div class="container justify-content-around">
    <div class="row"> 
        <div class="col-9">
            <h3>activities</h3>
            <% unless @activities.empty? %>
                <%= render @activities %>
            <% else %>
                <div class="text-center mt-5 alert alert-info">
                    <h3>Nothing to show</h3> 
                </div>
            <% end %>    
        </div>
   
        <div class="col-3 py-2 px-3 ">
            <div class="card" >
                <div class="row card-body">
                    <div class="col-md-6">
                        <%= user_image(current_user, class: "card-img-top") %>
                    </div> 
                    <div class="col-md-6 ">
                        <h3><%= current_user.name %></h3>
                    </div>
                </div>
            </div>  
            <div class="card mt-3">
                <div class="card-body text-center">
                  <%= link_to "learned #{current_user.words.size} words", words_path, type: "button", class: "btn btn-dark" %>
                </div>
            </div>
        </div>
        
    </div>
</div>



