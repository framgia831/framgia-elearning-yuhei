<!-- new.html.erb -->
<div class="container">

	<div class="col">

		<div class="row-xs-6 text-center">
			<h2><%= @word.content %></h2>
		</div>

		<div class="row-xs-6">
			<% @word.choices.each do |choice| %>
			  <%= button_to choice.content, category_answers_path(@category), params: {lesson_id: @lesson.id, word_id: @word.id, choice_id: choice.id}, class: 'btn btn btn-block mb-3' %>
			<% end %>
		</div>
			
	</div>

</div>