<div class="container justify-content-around">
    <div class="row"> 
        <div class="col-9">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">#</th>
                        <th scope="col">#</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>#</td>
                        <td>#</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>#</td>
                        <td>#</td>
                    </tr>
                </tbody>
            </table>
        </div>
    
        <div class="border border-info col-3 py-2 px-3 rounded">
            <div class="row">
                <div class="img col-md-6">
                    <%= image_tag(current_user.image.url) if current_user.image? %>
                </div> 
                <div class="col-md-6">
                    <h1><%= current_user.name %></h1>
                    <p>Learned xxwords <br> Learned xxlessons</p>
                </div>
            </div>
        </div>
        
    </div>
</div>


