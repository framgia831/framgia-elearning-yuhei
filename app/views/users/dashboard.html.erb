<!-- dashbord.html.erb -->

<div class="container justify-content-around">
    <div class="row"> 
        <div class="col-9">
            <h3>activities</h3>
              <%= render @activities %>
        </div>
   
    
        <div class="col-3 py-2 px-3 ">
            <div class="card">
                <div class="row card-body">
                    <div class="img col-md-6">
                        <%= user_image(current_user) %>
                    </div> 
                    <div class="col-md-6">
                        <h3><%= current_user.name %></h3>
                    
                    </div>
                </div>
            </div>  
            <div class="card mt-3">
                <div class="card-body text-center">
                  <%= link_to "learned #{current_user.words.size}words", words_path, type: "button", class: "btn btn-default btn-md" %>

                    
                    
                </div>
            </div>
            
        </div>
        
    </div>
</div>



