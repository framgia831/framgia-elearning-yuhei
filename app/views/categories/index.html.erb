<!-- index.html.erb -->
<div class="mb-5">
	<h1 class="text-center">Categories</h1>
</div>

<div class="row">
		<table class="table table-hover">
        <thead>
	    	<tr>
	            <th scope="col">#</th>
	            <th scope="col">title</th>
	            <th scope="col">description</th>
	            <th scope="col">action</th>
	        </tr>
	    </thead>
	    <tbody>
			<% @categories_all.each_with_index do |category, i| %>
		        <tr>
		            <th scope="row"><%= i+1 %></th>
		            <td>
		            	<%= category.title %>
		            </td>
		            <td><%= category.description %></td>
		            <td>
		            	<% if  @categories.include?(category) %>
		            	<%= button_to "start", lessons_path, params: {category_id: category.id}, class: 'btn btn btn-block mb-3' %>
		            	<% else %>
		            	<%= link_to "result", category_path(category), class: 'btn btn btn-block mb-3' %>
		            	<% end %>
		            </td>
		        </tr>
			<% end %>		
	    </tbody> 
	    
        </table>
	<div class="paginate text-center">
		<%= paginate @categories_page %>
	</div>
	
</div>