<!-- index.html.erb -->
<div class="mb-5">
	<h1 class="text-center">Categories</h1>
	<div class="text-center">
		<a href= "categories/new" ><button type="button" class="btn btn-primary btn-lg ">Create</button>
		</a>
	</div>	
</div>

<div class="row">
		<table class="table table-hover">
        <thead>
	    	<tr>
	            <th scope="col">#</th>
	            <th scope="col">title</th>
	            <th scope="col">description</th>
	            <th scope="col">action</th>

	        </tr>
	    </thead>
	<% @categories.each do |category| %>
	    <tbody>
	        <tr>
	            <th scope="row"><%= @i %></th>
	            <td>
	            	<%= link_to "#{category.title}",  admin_category_words_path(category) %>
	            </td>
	            <td><%= category.description %></td>
	            <td>
	            	<%= link_to "edit", edit_admin_category_path(category) %>
	            	/
	            	<%= link_to "delete", admin_category_path(category), method: :delete %>
	            		
	            </td>

	        </tr>
	    </tbody> 
	<% @i+=1 %>    
	<% end %>		
        </table>

</div>