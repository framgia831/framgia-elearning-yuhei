<!-- show.html.erb -->
<div class="container justify-content-around">
  <div class="row  py-4">
    <div class="col-3 py-2 px-3 rounded">
      <div class="card">
        <div class="card-body row ">
          <div class="img col-md-6 ">
            <%= user_image(@user) %>    
          </div> 
          <div class="col-md-6">
            <h3><%= @user.name %></h3>
            <hr>
            <h7><%= @user.followers.count %> followers</h7>
            <br>
            <h7><%= @user.following.count %> following</h7>
          </div>  
        </div>
    
          <div class="button text-center mb-3">
            <% unless current_user == @user %>
              <% if relationship = current_user.relationship(@user)%>
                <%= button_to "Unfollow", relationship_path(relationship), method: :delete, class: 'btn btn-default btn-md' %>
              <% else %>
                <%= button_to "Follow", relationships_path, params: {followed_id: @user.id}, class: 'btn btn-success btn-md' %>
              <% end %>
              <% else %>  
              <%= link_to "Edit", edit_user_path, type: "button", class: "btn btn-default btn-md" %>
            <% end %> 
          </div>  
      </div>
    </div>  

    <div class="col-9 ">
    	<h3>activities</h3>
        <% @user.lessons.each do |lesson| %>
          <div class="media border-top p-2">
            <div class="media-body row">
              <div class="img col-md-2">
                <%= user_image(lesson.user) %>    
              </div>
              <div class="content col-md-10"> 
                <h5><%= link_to lesson.user.name, lesson.user %> leaned 
                    <%= lesson.correct_answers.size %> of 
                    <%= lesson.choices.size %> in 
                    <%= link_to lesson.category.title, lesson.category %>
                </h5>
                <small class="text-muted">
                  <%= time_ago_in_words(lesson.created_at) %> ago
                </small>
              </div>
            </div>
          </div>
      <% end %> 
    </div>
   
  </div>

</div>

