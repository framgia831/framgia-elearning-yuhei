<header>
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
    <div class="container">
        <%= link_to "elg", root_path, class: "navbar-brand" %>

        <ul class="navbar-nav ml-auto">
            <% if current_user %>
                <li class="nav-item">
                    <%= link_to "Categories", categories_path , class: "nav-link"%>
                </li>
                <li class="nav-item">
                    <%= link_to "Users", users_path , class: "nav-link"%>
                </li>
                <li class="nav-item">
                    <%= link_to current_user.name, user_path(current_user) , class: "nav-link"%>
                </li>
                <li class="nav-item">
                    <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
                </li>
                <% if  current_user.admin %>
                    <li class="nav-item">
                        <%= link_to "Admin", admin_categories_path, class: "nav-link" %>
                    </li> 
                <% end %>
            <% else %>
                 <li class="nav-item">
                    <%= link_to "Signup", signup_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Login", login_path, class: "nav-link" %>
                </li>
            <% end %>
        </ul>
    </div> 
</nav>
</header>