<!-- dashbord.html.erb -->


<div class="row justify-content-around"> 
  <div class="col-8">
  	<table class="table table-hover">
  		<thead>
  			<tr>
  				<th scope="col">#</th>
  				<th scope="col">#</th>
  				<th scope="col">#</th>
  			</tr>
  		</thead>
  		<tbody>
  			<tr>
  				<th scope="row">1</th>
  				<td>#</td>
  				<td>#</td>
  			</tr>
  			<tr>
  				<th scope="row">2</th>
  				<td>#</td>
  				<td>#</td>
  			</tr>
  		</tbody>
  	</table>
  </div>
  <div class="col-4">
  	<div class="box2 row">
  		<div class="img col-xs-6">
 		<%= image_tag(current_user.image.url, class: 'mw-5') if current_user.image? %>
 		</div>	
 		<div class="col-xs-3 offset-md-3">
  		<h1><%= current_user.name %></h1>
		<p><%= current_user.email %></p>
  		</div>
  	</div>

  </div>
 	
</div>

